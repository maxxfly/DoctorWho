<div style="width: 500px; border: 1px solid #CCC; margin: 20px auto; padding: 10px;">
	<%= simple_form_for @doctor do |f| %>
	  <%= f.association :profession %>
	  <%= f.input :first_name %>  
	  <%= f.input :last_name %>  
	  <%= f.input :address_1 %>  
	  <%= f.input :address_2 %>  
	  <%= f.input :zip_code %>  
	  <%= f.input :city %>  
	  <%= f.input :country %>  
	  <%= f.button :submit %>
	<% end %>
</div>
